{
  "name": "astro-notion-blog",
  "type": "module",
  "version": "0.6.3",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:cached": "npm run cache:fetch && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --ext .js,.ts,.astro src",
    "format": "npx prettier --write .",
    "cache:fetch": "node scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "node scripts/retrieve-block-children.cjs"
  },
  "dependencies": {
    "@astrojs/react": "^3.0.2",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@notionhq/client": "^2.2.13",
    "@radix-ui/colors": "^3.0.0",
    "@supercharge/promise-pool": "^3.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "astro": "^3.2.2",
    "async-retry": "^1.3.3",
    "axios": "^1.5.1",
    "exif-be-gone": "^1.3.2",
    "katex": "^0.16.9",
    "mermaid": "^10.5.0",
    "metascraper": "^5.37.1",
    "metascraper-description": "^5.37.1",
    "metascraper-image": "^5.37.1",
    "metascraper-title": "^5.37.1",
    "node-fetch": "^3.3.2",
    "preline": "^1.9.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^16.4.0",
    "@types/async-retry": "^1.4.6",
    "@types/js-base64": "^3.3.1",
    "@types/metascraper": "^5.14.1",
    "@types/metascraper-description": "^5.14.2",
    "@types/metascraper-image": "^5.14.1",
    "@types/metascraper-title": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.16",
    "cli-progress": "^3.12.0",
    "eslint": "^8.50.0",
    "eslint-plugin-astro": "^0.29.1",
    "nx": "16.9.1",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  }
}
