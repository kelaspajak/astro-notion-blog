---
import { Image } from "astro:assets";
import Hero from "../images/hero-berlangganan.jpg?url";
import tiny from "../images/featured-telegram-tiny.jpg?url";

import Layout from "../layouts/Layout.astro";
import { Icons } from "../components/icons.tsx";
import Icon from "../components/Icon.astro";

import { buttonVariants } from "@/components/ui/button";
---

<Layout
	title='Diskusi Pajak'
	description='Pertama dan Terbesar di Indonesia '
	ogImage='/og-image.webp'
	path='/'
>
	<div slot='main'>
		<!-- Hero -->
		<div class='mb-16'>
			<Image
				src={Hero}
				alt='diskusi pajak merupakan diskusi perpajakan pertama dan terbesar di indonesia dengan beberapa grup diskusi pajak diskusi aplikasi perpajakan bendahara'
				class='mx-auto w-full max-w-5xl cursor-pointer bg-cover bg-center bg-no-repeat object-cover shadow-2xl transition duration-300 hover:scale-105 sm:rounded-xl'
				height={349}
				width={1024}
				alt='gambar telegram diskusi pajak beserta grup dan channelnya'
			/>
		</div>
		<div class='mx-auto w-full max-w-5xl'>
			<Icon />

			<!-- FeaturesStat -->
			<div
				class='mx-auto w-full max-w-5xl px-4 py-10 font-heading sm:px-6 lg:px-8 lg:py-14'
			>
				<!-- Title -->
				<div class='mx-auto mb-8 max-w-2xl text-center lg:mb-14'>
					<h2 class='balance text-3xl font-bold lg:text-4xl'>
						Diskusi Pajak dalam angka
					</h2>
				</div>
				<!-- End Title -->
				<!-- Grid -->
				<div
					class='mt-20 grid grid-cols-2 gap-6 sm:gap-12 lg:grid-cols-3 lg:gap-8'
				>
					{
						[
							{
								id: 1,
								name: "Telegram",
								desc: "User Grup dan Channel",
								count: "34.000+",
							},
							{
								id: 2,
								name: "Facebook",
								desc: "User Facebook Grup dan Pages",
								count: "17.000+",
							},
							{
								id: 3,
								name: "File & Slide Perpajakan",
								desc: "Dalam Sharepoint & Teams",
								count: "1Gb++",
							},
						].map(stat => (
							<div>
								<h4 class='text-lg font-semibold sm:text-xl'>{stat.name}</h4>
								<p class='mt-2 text-4xl font-bold sm:mt-3 sm:text-6xl'>
									{stat.count}
								</p>
								<p class='mt-1 text-neutral'>{stat.desc}</p>
							</div>
						))
					}
				</div>
				<!-- End Grid -->
			</div>
			<!-- End FeaturesStat -->

			<!-- Features -->
			<div class='mx-auto max-w-5xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14'>
				<div class='relative p-6 md:p-16'>
					<!-- Grid -->
					<div
						class='relative z-10 lg:grid lg:grid-cols-12 lg:items-center lg:gap-16'
					>
						<div class='mb-10 lg:order-2 lg:col-span-6 lg:col-start-8 lg:mb-0'>
							<h2 class='balance text-2xl font-bold sm:text-3xl'>
								Grup dan Channel yang tersedia
							</h2>

							<!-- Tab Navs -->
							<nav
								class='mt-5 grid gap-4 md:mt-10'
								aria-label='Tabs'
								role='tablist'
							>
								<button
									type='button'
									class='active rounded-xl p-4 text-left hover:bg-zinc-200/50 hs-tab-active:bg-white hs-tab-active:shadow-md hs-tab-active:hover:border-transparent md:p-5'
									id='tabs-with-card-item-1'
									data-hs-tab='#tabs-with-card-1'
									aria-controls='tabs-with-card-1'
									role='tab'
								>
									<span class='flex'
										><Icons.telegramCircle
											className='mt-2 h-6 w-6 flex-shrink-0 hs-tab-active:text-blue-600 md:h-7 md:w-7'
										/>

										<span class='ml-6 grow'>
											<span
												class='block text-lg font-semibold hs-tab-active:text-blue-600'
												>Diskusi Pajak</span
											>
											<span class='balance mt-1 block'
												>Diskusi Pajak secara umum, pembahasan pajak yang
												dikelola pemerintah pusat</span
											>
										</span>
									</span>
								</button>

								<button
									type='button'
									class='rounded-xl p-4 text-left hover:bg-zinc-200/80 hs-tab-active:bg-white hs-tab-active:shadow-md hs-tab-active:hover:border-transparent md:p-5'
									id='tabs-with-card-item-2'
									data-hs-tab='#tabs-with-card-2'
									aria-controls='tabs-with-card-2'
									role='tab'
								>
									<span class='flex'>
										<Icons.kubusDot
											className='mt-2 h-6 w-6 flex-shrink-0 hs-tab-active:text-blue-600 md:h-7 md:w-7'
										/>
										<span class='ml-6 grow'>
											<span
												class='balance block text-lg font-semibold hs-tab-active:text-blue-600'
												>Aplikasi eBukpot eFaktur eReg eForm</span
											>
											<span class='balance mt-1 block'
												>Pembahasan seputar aplikasi pendukung pelaporan dan
												layanan perpajakan</span
											>
										</span>
									</span>
								</button>

								<button
									type='button'
									class='rounded-xl p-4 text-left hover:bg-zinc-200/80 hs-tab-active:bg-white hs-tab-active:shadow-md hs-tab-active:hover:border-transparent md:p-5'
									id='tabs-with-card-item-3'
									data-hs-tab='#tabs-with-card-3'
									aria-controls='tabs-with-card-3'
									role='tab'
								>
									<span class='flex'>
										<Icons.twoPeople
											className='mt-2 h-6 w-6 flex-shrink-0 hs-tab-active:text-blue-600 md:h-7 md:w-7'
										/>
										<span class='ml-6 grow'>
											<span
												class='balance block text-lg font-semibold hs-tab-active:text-blue-600'
												>Diskusi Bendahara</span
											>
											<span class='balance mt-1 block'
												>Penerimaan bendahara cukup signifikan untuk setiap KPP,
												mari kita bahas khusus disini.</span
											>
										</span>
									</span>
								</button>
							</nav>
							<!-- End Tab Navs -->
						</div>
						<!-- End Col -->

						<div class='lg:col-span-6'>
							<div class='relative'>
								<!-- Tab Content -->
								<div>
									<div
										id='tabs-with-card-1'
										role='tabpanel'
										aria-labelledby='tabs-with-card-item-1'
									>
										<Image
											class='mx-auto rounded-xl object-scale-down shadow-xl shadow-zinc-300'
											src={tiny}
											alt='contoh telegram diskusi pajak'
											width={486}
											height={609}
										/>
									</div>
								</div>
								<!-- End Tab Content -->

								<!-- SVG Element -->
								<div
									class='absolute right-0 top-0 hidden translate-x-20 md:block lg:translate-x-20'
								>
									<svg
										class='h-auto w-16 text-orange-500'
										width='121'
										height='135'
										viewBox='0 0 121 135'
										fill='none'
										xmlns='http://www.w3.org/2000/svg'
									>
										<path
											d='M5 16.4754C11.7688 27.4499 21.2452 57.3224 5 89.0164'
											stroke='currentColor'
											stroke-width='10'
											stroke-linecap='round'></path>
										<path
											d='M33.6761 112.104C44.6984 98.1239 74.2618 57.6776 83.4821 5'
											stroke='currentColor'
											stroke-width='10'
											stroke-linecap='round'></path>
										<path
											d='M50.5525 130C68.2064 127.495 110.731 117.541 116 78.0874'
											stroke='currentColor'
											stroke-width='10'
											stroke-linecap='round'></path>
									</svg>
								</div>
								<!-- End SVG Element -->
							</div>
						</div>
						<!-- End Col -->
					</div>
					<!-- End Grid -->

					<!-- Background Color -->
					<div class='absolute inset-0 grid h-full w-full grid-cols-12'>
						<div
							class='col-span-full h-5/6 w-full rounded-xl bg-zinc-100/90 sm:h-3/4 lg:col-span-7 lg:col-start-6 lg:h-full'
						>
						</div>
					</div>
					<!-- End Background Color -->
				</div>
			</div>
			<!-- End Features -->

			<!-- Features General-->
			<div class='mx-auto w-full max-w-5xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14'>
				<!-- Title -->
				<div class='mx-auto mb-8 max-w-2xl text-center lg:mb-14'>
					<h2 class='balance text-3xl font-bold lg:text-4xl'>
						Referensi Pajak Terlengkap, Akses Sekarang
					</h2>
					<p class='balance mt-3'>
						Dengan pengalaman perpajakan yang kami miliki, kami siap untuk
						membantu anda
					</p>
				</div>
				<!-- End Title -->

				<!-- Grid -->
				<div class='mx-auto grid max-w-3xl grid-cols-12 gap-6 lg:gap-8'>
					<!-- Icon Block -->
					{
						[
							{
								id: 1,
								name: "Grup yang dimoderasi",
								icon: <Icons.general01 />,
							},
							{
								id: 2,
								name: "Berpengalaman dibidang perpajakan",
								icon: <Icons.general02 />,
							},
							{
								id: 3,
								name: "24/7 Support",
								icon: <Icons.general03 />,
							},
						].map(general => (
							<div class='col-span-6 text-center sm:col-span-4'>
								{general.icon}
								<div class='mt-2 sm:mt-6'>
									<h3 class='text-lg font-semibold'>{general.name}</h3>
								</div>
							</div>
						))
					}
					<!-- End Icon Block -->
				</div>
				<!-- End Grid -->

				<!-- Grid gambar-->
				<div
					class='mt-20 grid grid-cols-2 items-center gap-x-2 sm:gap-x-6 lg:gap-x-8'
					>{
						[
							{
								id: 1,
								href: "https://source.unsplash.com/SDgX8iC-kEU",
								alt: "telegram diskusi pajak",
							},
							{
								id: 2,
								href: "https://source.unsplash.com/WcB22amJWco",
								alt: "sosial media diskusi pajak",
							},
						].map(gambar => (
							<div class='group relative block'>
								<img class='rounded-xl' src={gambar.href} alt={gambar.alt} />
							</div>
						))
					}
				</div>
			</div>
			<!-- End Features -->

			<div
				class='relative mx-auto w-full max-w-3xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14'
			>
				<!-- Blockquote -->
				<blockquote class='text-center lg:mx-auto lg:w-3/5'>
					<Icons.whatsApp className='mx-auto h-auto w-20 sm:w-28' />
					<div class='mt-6 lg:mt-10'>
						<p
							class='relative text-xl font-medium sm:text-2xl md:text-3xl md:leading-normal'
						>
							<Icons.quote
								className='absolute left-0 top-0 h-16 w-16 -translate-x-8 -translate-y-8 transform text-zinc-300 sm:h-24 sm:w-24'
							/>
							<span class='relative z-10 font-serif italic'
								>Mantap pak ekosistemnya 👍🏻</span
							>
						</p>
					</div>

					<footer class='mt-6'>
						<div class='font-semibold'>Naufal</div>
						<div class='text-sm text-gray-10'>
							Praktisi Perpajakan / Konsultan Pajak
						</div>
					</footer>
				</blockquote>
				<!-- End Blockquote -->
			</div>
			<!-- End Testimonials -->

			<div class='pt-10 md:pt-24'>
				<div class='mx-auto max-w-5xl px-4 pb-12 sm:px-6 lg:px-8'>
					<div class='mx-auto max-w-xl text-center lg:max-w-4xl'>
						<h1
							class='balance text-3xl font-bold leading-snug sm:text-6xl sm:leading-tight lg:text-7xl lg:leading-tight'
						>
							<span
								class="relative mr-3 text-gray-10 before:absolute before:right-0 before:top-0 before:z-10 before:-mr-2 before:mt-2 before:block before:h-6 before:w-6 before:-rotate-12 before:bg-[url('/Microsoft-Fluentui-Emoji-3d-Smiling-Face-With-Sunglasses-3d.svg')] before:bg-[length:24px_24px] sm:before:h-8 sm:before:w-8 sm:before:bg-[length:32px_32px]"
								>Gratis
							</span>bergabung dengan Diskusi Pajak
							<!-- <span class="block">di Indonesia</span> -->
						</h1><p class='balance mx-auto mt-3 max-w-2xl md:mt-5 md:text-lg'>
							memberikan informasi dan panduan tentang berbagai aspek peraturan
							dan undang-undang pajak.
						</p>
						<div
							class='mt-8 grid w-full gap-3 sm:inline-flex sm:justify-center'
						>
							<a
								class={buttonVariants({ variant: "default" })}
								href='https://t.me/addlist/HXeQGfBQr9ZjNzA1'
								target='_blank'
								><Icons.telegram className='mr-2 h-4 w-4' />Bergabung grup
								Telegram</a
							>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
